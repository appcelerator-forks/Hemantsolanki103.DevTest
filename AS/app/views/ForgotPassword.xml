<Alloy>
	<Window titleid="forgot_pwd_title" onClick="winClickFunc" onOpen="openFunc">
		<ScrollView  layout="vertical" top="0" bottom="Alloy.Globals.size_24">
			<ImageView id="logo"></ImageView>
			<Label id="headerLbl" textid="app_name_caps" color='Alloy.CFG.color.lineColor'></Label>
			<View height="Ti.UI.SIZE" layout="vertical" top="8%">
				<Label id="msgLbl" textid="forgot_msg_txt"></Label>
				<View top="10" height="Ti.UI.SIZE" width="84%">
					<Label id="userIconLbl" class="sa" text='\ue005' color='Alloy.CFG.color.lineColor'></Label>
					<TextField id="emailTF" class="textField" name="tf"></TextField>
					<View height="1" backgroundColor="Alloy.CFG.color.lineColor" bottom="0"></View>
				</View>
				<Button id="submitBtn" onClick="submitFunc"></Button>
			</View>
		</ScrollView>
		<View id="bottowView">
			<View layout="horizontal" height="Ti.UI.SIZE" width="Ti.UI.SIZE">
				<Label id="bottomLbl"></Label>
				<ImageView id="heliosLogo"></ImageView>
			</View>
		</View>
	</Window>
</Alloy>